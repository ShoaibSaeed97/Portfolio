<style>
    .skill-container {
        max-width: 600px;
        margin: 20px auto;
        background: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }

    .skill {
        margin-bottom: 20px;
    }

    .skill-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
        font-weight: 600;
        color: #333;
    }

    .progress-bg {
        background: #eee;
        border-radius: 8px;
        height: 16px;
        overflow: hidden;
    }

    .progress-bar {
        background: #3b82f6; /* أزرق Tailwind */
        height: 100%;
        border-radius: 8px;
    }
</style>

<section class="skill-container">
    <h2>المهارات التقنية</h2>
    @foreach (var skill in new[] {
        new { Name = "C#", Level = 85 },
        new { Name = "ASP.NET Core", Level = 85 },
        new { Name = "Entity Framework", Level = 80 },
        new { Name = "SQL", Level = 75 },
        new { Name = "HTML", Level = 90 },
        new { Name = "CSS", Level = 85 },
        new { Name = "GitHub", Level = 75 }
        })
    {
        <div class="skill">
            <div class="skill-header">
                <span>@skill.Name</span>
                <span>@skill.Level%</span>
            </div>
            <div class="progress-bg">
                <div class="progress-bar" style="width:@skill.Level%"></div>
            </div>
        </div>
    }
</section>
