@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "السيرة الذاتية";
}



<div class="container mt-5">
    <h2 class="mb-4 fw-bold">@Localizer["resume"]</h2>

   

    <section class="education-section">
        <h2 class="fw-bold">@Localizer["EducationHeader"]</h2>

        @foreach (var edu in new[] {
                new {
                Degree = Localizer["Edu1_Degree"].Value,
                Institution = Localizer["Edu1_Institution"].Value,
                Duration = Localizer["Edu1_Duration"].Value,
                Notes = Localizer["Edu1_Notes"].Value
                },
                new {
                Degree = Localizer["Edu2_Degree"].Value,
                Institution = Localizer["Edu2_Institution"].Value,
                Duration = Localizer["Edu2_Duration"].Value,
                Notes = Localizer["Edu2_Notes"].Value
                }
                })
        {
            <div class="education-item">
                <div class="education-degree">@edu.Degree</div>
                <div class="education-institution">@edu.Institution</div>
                <div class="education-duration">@edu.Duration</div>
                @if (!string.IsNullOrWhiteSpace(edu.Notes))
                {
                    <div class="education-notes">@edu.Notes</div>
                }
            </div>
        }
    </section>



    <section class="skill-container">
        <h2 class="fw-bold">@Localizer["skill"]</h2>
        @foreach (var skill in new[] {
                new { Name = "C#", Level = 85 },
                new { Name = "ASP.NET Core", Level = 85 },
                new { Name = "Entity Framework", Level = 80 },
                new { Name = "SQL", Level = 75 },
                new { Name = "HTML", Level = 90 },
                new { Name = "CSS", Level = 85 },
                new { Name = "GitHub", Level = 75 }
                })
        {
            <div class="skill">
                <div class="skill-header">
                    <span>@skill.Name</span>
                    <span>@skill.Level%</span>
                </div>
                <div class="progress-bg">
                    <div class="progress-bar" style="width:@skill.Level%"></div>
                </div>
            </div>
        }
    </section>
    

    <section class="experience-section">
        <h2 class="fw-bold">@Localizer["ExperienceHeader"]</h2>

        @foreach (var exp in new[] {
                new {
                Title = Localizer["Project1_Title"],
                Position = Localizer["Project1_Position"],
                Duration = Localizer["Project1_Duration"],
                Description = Localizer["Project1_Description"]
                },
                new {
                Title = Localizer["Project2_Title"],
                Position = Localizer["Project2_Position"],
                Duration = Localizer["Project2_Duration"],
                Description = Localizer["Project2_Description"]
                }
                })
        {
            <div class="experience-item">
                <div class="experience-position">@exp.Position</div>
                <div class="experience-company">@exp.Title</div>
                <div class="experience-duration">@exp.Duration</div>
                <div class="experience-description">@exp.Description</div>
            </div>
        }
    </section>





    
</div>
