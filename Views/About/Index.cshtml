@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@{
    ViewData["Title"] = "عني";
}

<div class="container mt-5">
    <div class="card shadow rounded-4 p-4">
        <h2 class="mb-4 text-primary fw-bold">@Localizer["about"]</h2>
        <p class="lead"> @Localizer["nam"] <strong>@Localizer["shoaib"]</strong> @Localizer["explain"]</p>
        <hr />

        <h4 class="text-secondary mt-4">@Localizer["skills"]</h4>
        <div class="row row-cols-1 row-cols-md-2 g-3">
            <div class="col">
                <div class="d-flex align-items-center bg-light border rounded-3 p-3">
                    <span class="me-2">📌</span> <span>C# و ASP.NET Core</span>
                </div>
            </div>
            <div class="col">
                <div class="d-flex align-items-center bg-light border rounded-3 p-3">
                    <span class="me-2">📌</span> <span>HTML, CSS</span>
                </div>
            </div>
            <div class="col">
                <div class="d-flex align-items-center bg-light border rounded-3 p-3">
                    <span class="me-2">📌</span> <span>SQL و Entity Framework Core</span>
                </div>
            </div>
            <div class="col">
                <div class="d-flex align-items-center bg-light border rounded-3 p-3">
                    <span class="me-2">📌</span> <span>GitHub</span>
                </div>
            </div>
        </div>

        <hr />

        <h4 class="text-secondary mt-4">@Localizer["goal"]</h4>
        <p>@Localizer["exp"]</p>
    </div>
</div>